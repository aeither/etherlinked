# Etherlink Fusion+ Contracts Environment Configuration

# Private key for contract deployment (without 0x prefix)
PRIVATE_KEY=your_private_key_here

# Network configuration
NETWORK=etherlinkTestnet

# Gas settings
GAS_PRICE=1000000000
GAS_LIMIT=5000000

# Contract verification
VERIFY_CONTRACTS=false

# Etherscan API keys (if available)
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# RPC URLs (optional - will use hardhat config defaults)
ETHERLINK_TESTNET_RPC=https://node.ghostnet.etherlink.com
ETHERLINK_MAINNET_RPC=https://node.mainnet.etherlink.com
MONAD_TESTNET_RPC=https://rpc.testnet.monad.xyz
MONAD_MAINNET_RPC=https://rpc.monad.xyz

# Gas reporter settings
REPORT_GAS=true
